---
layout: base.njk
title: All Posts
---

<h2>All Posts</h2>

<ul class="post-list">
{% for post in collections.posts | reverse %}
    <li>
        <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <time datetime="{{ post.date }}">{{ post.date }}</time>
        {% if post.data.tags %}
        <div class="tags">
            {% for tag in post.data.tags %}
            <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </li>
{% endfor %}
</ul>